{
  "name": "wakey",
  "private": true,
  "prettier": "@shopify/prettier-config",
  "scripts": {
    "dev": "turbo dev --filter=@wakey/website",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:website": "turbo dev --filter=@wakey/website",
    "build:website": "turbo build --filter=@wakey/website",
    "seo": "pnpm --filter=@wakey/seo-engine dev",
    "seo:fetch": "pnpm --filter=@wakey/seo-engine fetch",
    "seo:analyze": "pnpm --filter=@wakey/seo-engine analyze",
    "seo:generate": "pnpm --filter=@wakey/seo-engine generate",
    "seo:track": "pnpm --filter=@wakey/seo-engine track",
    "seo:sync": "pnpm --filter=@wakey/seo-engine sync",
    "prepare": "husky"
  },
  "devDependencies": {
    "@shopify/prettier-config": "^1.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,css,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
