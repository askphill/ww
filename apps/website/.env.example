# Environment variables for the Wakey Hydrogen storefront
# Copy this file to .env and fill in the values
# Run `npx shopify hydrogen link` to link to your store
# Run `npx shopify hydrogen env pull` to pull environment variables from Shopify

# Session secret - MUST be at least 32 characters for security
# Generate one with: openssl rand -base64 32
SESSION_SECRET="your-secure-session-secret-at-least-32-chars"

# Shopify store name (without .myshopify.com)
STORE="your-store-name"

# Shopify Admin API token (for server-side operations)
# Get this from Shopify Admin > Apps > Develop apps
ADMIN_API_TOKEN="shpat_your_admin_api_token"

# Public Storefront API token (injected by shopify hydrogen env pull)
PUBLIC_STOREFRONT_API_TOKEN="your_storefront_api_token"

# Store domain (injected by shopify hydrogen env pull)
PUBLIC_STORE_DOMAIN="your-store.myshopify.com"
