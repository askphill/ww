{%- liquid
  assign hero_heading_text = section.settings.text | strip_html | escape
-%}

<style>
  .hero--logo {
    fill: var(--color-{{ section.settings.logo_color }});
  }
</style>

<div class="hero rounded">
  <h1 class="hero--heading visually-hidden">{{ hero_heading_text }}</h1>
  {% for block in section.blocks %}
    {% if block.settings.product %}
      <div
        class="hero--tooltip"
        style="
          --tooltip-top-mobile: {{ block.settings.position_top_mobile }}%;
          --tooltip-left-mobile: {{ block.settings.position_left_mobile }}%;
          --tooltip-top-desktop: {{ block.settings.position_top_desktop }}%;
          --tooltip-left-desktop: {{ block.settings.position_left_desktop }}%;
        "
      >
        {% render 'tooltip', product: block.settings.product %}
      </div>
    {% endif %}
  {% endfor %}
  <div class="">
    <div class="hero--image-wrapper">
      {%- liquid
        assign hero_image_alt = section.settings.image.alt | default: section.settings.text | default: shop.name
        assign hero_image_large_alt = section.settings.image_large.alt | default: hero_image_alt
        assign hero_image_alt_escaped = hero_image_alt | strip_html | escape
        assign hero_image_large_alt_escaped = hero_image_large_alt | strip_html | escape
      -%}
      {{
        section.settings.image
        | image_url: width: 1500
        | image_tag:
          class: 'hero--image',
          sizes: '100vw',
          widths: '375, 550, 750, 1100, 1500',
          fetchpriority: 'auto',
          alt: hero_image_alt_escaped
      }}
      {{
        section.settings.image_large
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image_large.width,
          class: 'hero--image',
          sizes: '100vw',
          alt: hero_image_large_alt_escaped,
          widths: '1500, 1780, 2000, 3000, 3840',
          fetchpriority: 'auto'
      }}
    </div>

    <div
      class="hero--logo-wrapper"
      aria-hidden="true"
    >
      {% render 'icon', type: 'logo-big', class: 'hero--logo' %}
    </div>
  </div>
</div>

{% stylesheet %}
  .hero {
    height: 100svh;
    min-height: var(--min-height);
    overflow: hidden;
    position: relative;
  }

  .hero--image-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero--image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero--image:nth-child(2) {
    display: none;
  }

  .hero--logo {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: var(--padding) var(--padding) calc(var(--padding) * 2);
  }

  .hero--tooltip {
    position: absolute;
    top: var(--tooltip-top-mobile);
    left: var(--tooltip-left-mobile);
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .hero--heading {
    margin: 0;
  }

  @media (width >= 47rem) {
    .hero--logo {
      padding: calc(var(--padding) * 2);
    }
    .hero--image:nth-child(1) {
      display: none;
    }
    .hero--image:nth-child(2) {
      display: block;
    }
    .hero--tooltip {
      min-width: 300px;
      top: var(--tooltip-top-desktop);
      left: var(--tooltip-left-desktop);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section overflow-hidden",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_large",
      "label": "Image desktop"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Morning <em>essentials</em> <br>with good <em>intentions</em></p>"
    },
    {
      "type": "select",
      "id": "logo_color",
      "label": "Logo Color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "skyblue",
          "label": "Sky Blue"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "yellow",
          "label": "Yellow"
        },
        {
          "value": "ocher",
          "label": "Ocher"
        },
        {
          "value": "softorange",
          "label": "Soft Orange"
        },
        {
          "value": "sand",
          "label": "Sand"
        },
        {
          "value": "black",
          "label": "Black"
        }
      ],
      "default": "softorange"
    }
  ],
  "blocks": [
    {
      "name": "Product",
      "type": "item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "position_top_mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Mobile: Distance from top",
          "default": 50
        },
        {
          "type": "range",
          "id": "position_left_mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Mobile: Distance from left",
          "default": 50
        },
        {
          "type": "range",
          "id": "position_top_desktop",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Desktop: Distance from top",
          "default": 50
        },
        {
          "type": "range",
          "id": "position_left_desktop",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Desktop: Distance from left",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
